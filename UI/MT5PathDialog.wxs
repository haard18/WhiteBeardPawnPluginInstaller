<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
    
    <Fragment>
        <!-- MetaTrader 5 Path Selection Dialog -->
        <UI Id="MT5PathDialog">
            <Dialog Id="MT5PathDlg" Width="370" Height="270" Title="[ProductName] - MetaTrader 5 Location">
                
                <!-- Banner -->
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
                <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
                
                <!-- Title -->
                <Control Id="Title" Type="Text" X="15" Y="6" Width="340" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>{\WixUI_Font_Title}MetaTrader 5 Installation</Text>
                </Control>
                
                <Control Id="Description" Type="Text" X="25" Y="23" Width="340" Height="15" Transparent="yes" NoPrefix="yes">
                    <Text>Please specify your MetaTrader 5 installation directory</Text>
                </Control>
                
                <!-- MT5 Path Information -->
                <Control Id="InfoText" Type="Text" X="20" Y="60" Width="330" Height="30" NoPrefix="yes">
                    <Text>The WhiteBeard Pawn Plugin will be installed to the Plugins folder in your MetaTrader 5 directory.</Text>
                </Control>
                
                <!-- Detection Status -->
                <Control Id="DetectionStatus" Type="Text" X="20" Y="95" Width="330" Height="20" NoPrefix="yes">
                    <Text>Searching for MetaTrader 5...</Text>
                    <Condition Action="show">MT5_FOUND = "0"</Condition>
                </Control>
                
                <Control Id="DetectionSuccess" Type="Text" X="20" Y="95" Width="330" Height="20" NoPrefix="yes">
                    <Text>✓ MetaTrader 5 detected automatically</Text>
                    <Condition Action="show">MT5_FOUND = "1"</Condition>
                </Control>
                
                <!-- MT5 Path Section -->
                <Control Id="MT5PathLabel" Type="Text" X="20" Y="120" Width="340" Height="15" NoPrefix="yes">
                    <Text>MetaTrader 5 Installation Path:</Text>
                </Control>
                
                <Control Id="MT5PathEdit" Type="Edit" X="20" Y="135" Width="280" Height="18" 
                         Property="MT5_INSTALL_PATH" />
                
                <Control Id="BrowseMT5Btn" Type="PushButton" X="305" Y="135" Width="56" Height="18" Text="Browse...">
                    <Publish Event="SpawnDialog" Value="BrowseMT5Dlg">1</Publish>
                </Control>
                
                <!-- Validation Info -->
                <Control Id="ValidationInfo" Type="Text" X="20" Y="160" Width="330" Height="30" NoPrefix="yes">
                    <Text>Default location: C:\Program Files\MetaTrader 5 Platform\TradeMain</Text>
                </Control>
                
                <!-- Plugin Installation Details -->
                <Control Id="DetailsLabel" Type="Text" X="20" Y="195" Width="330" Height="15" NoPrefix="yes">
                    <Text>Files to be installed:</Text>
                </Control>
                
                <Control Id="Details" Type="Text" X="30" Y="210" Width="330" Height="15" NoPrefix="yes">
                    <Text>• PawnPlugin64.dll → [MT5_INSTALL_PATH]\Plugins\</Text>
                </Control>
                
                <!-- Bottom Line -->
                <Control Id="BottomLine" Type="Line" X="0" Y="226" Width="370" Height="0" />
                
                <!-- Navigation Buttons -->
                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
                    <Publish Event="NewDialog" Value="LicenseAgreementDlg">1</Publish>
                </Control>
                
                <Control Id="Validate" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="&amp;Validate">
                    <Publish Event="DoAction" Value="CA_ValidateMT5Path">1</Publish>
                </Control>
                
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="&amp;Next" Default="yes" Disabled="yes">
                    <Publish Event="NewDialog" Value="VerifyReadyDlg">MT5_PATH_VALID = "1"</Publish>
                    <Condition Action="enable">MT5_PATH_VALID = "1"</Condition>
                    <Condition Action="disable">MT5_PATH_VALID &lt;&gt; "1"</Condition>
                </Control>
                
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
                
            </Dialog>
        </UI>
        
        <!-- Browse for MT5 Directory Dialog -->
        <UI Id="BrowseMT5Dialog">
            <Dialog Id="BrowseMT5Dlg" Width="370" Height="270" Title="[ProductName] - Browse for MetaTrader 5">
                
                <Control Id="PathEdit" Type="DirectoryCombo" X="25" Y="100" Width="320" Height="18" 
                         Property="MT5_INSTALL_PATH" />
                
                <Control Id="OK" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="OK">
                    <Publish Event="DoAction" Value="CA_ValidateMT5Path">1</Publish>
                    <Publish Event="EndDialog" Value="Return">1</Publish>
                </Control>
                
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
                    <Publish Event="EndDialog" Value="Return">1</Publish>
                </Control>
                
            </Dialog>
        </UI>
        
    </Fragment>
    
</Wix>
